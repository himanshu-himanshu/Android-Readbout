<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--*************************************************-->
    <!--*************** COMMON STYLES ****************-->
    <!--*************************************************-->
    <style name="mathParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">20sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/raleway_b</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--*************************************************-->
    <!--*********** TRENDING FRAGMENT STYLES ************-->
    <!--*************************************************-->

    <style name="trendingHeading" parent="heading">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:background">@drawable/line</item>
    </style>

    <style name="trendingRecyclerView" parent="mathParent">
        <item name="android:padding">2dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_below">@id/heading</item>
    </style>

    <style name="singleCategoryRecyclerView" parent="mathParent">
        <item name="android:padding">2dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_below">@id/linear</item>
    </style>

    <!--*************************************************-->
    <!--***********CATEGORIES FRAGMENT STYLES************-->
    <!--*************************************************-->

    <style name="categoryRelative" parent="mathParent">
        <item name="android:background">@color/primary</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="categoryHeading" parent="heading">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">40sp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="categorySubHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">30sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:text">@string/aboutUsHeading</item>
    </style>

    <style name="cardLinearLayout" parent="wrapContent">
        <item name="android:gravity">center</item>
        <item name="android:padding">20sp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/card_round_white</item>
    </style>

    <style name="cardText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <!--*************************************************-->
    <!--*********** SETTING FRAGMENT STYLES ************-->
    <!--*************************************************-->

    <style name="profileLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="infoLinearLayout" parent="mathParent">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="userImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:src">@drawable/user</item>
    </style>

    <style name="nameTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:fontFamily">@font/raleway_b</item>
        <item name="android:text">""</item>
    </style>

    <style name="emailTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#bbbbbb</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:text">""</item>
    </style>

    <style name="titleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#E8C4C4</item>
        <item name="android:fontFamily">@font/raleway_b</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/line</item>
    </style>

    <style name="settingLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settingTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#dddddd</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settingValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="notificationSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:switchMinWidth">56dp</item>
        <item name="android:height">48dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="settingSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/line</item>
    </style>

    <!--*************************************************-->
    <!--********** NEWS-DETAIL ACTIVITY STYLES **********-->
    <!--*************************************************-->

    <style name="newsDetailHeadingLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:id">@id/linear</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/line</item>
    </style>

    <style name="newsDetailBackImage" parent="mathParent">
        <item name="android:src">@drawable/baseline_arrow_back_24</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">20</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="newsDetailLogoImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/baseline_favorite_border_24</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="readboutHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:id">@id/heading</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:text">News Detail</item>
    </style>

    <style name="newsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#dddddd</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:text">Title</item>
    </style>

    <style name="newsImageCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:radius">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="newsImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/news</item>
    </style>

    <style name="newsDescriptionLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="newsAuthor" parent="mathParent">
        <item name="android:text">Author</item>
        <item name="android:textColor">#A3FF00</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="newsDate" parent="mathParent">
        <item name="android:text">Date</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="newsBody" parent="mathParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Body</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!---Notification Styles-->
    <style name="FrontViewRelativeLayout">
        <item name="android:tag">front</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="FrontImageView">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/baseline_message_24</item>
    </style>

    <style name="ItemUsernameText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/notificationImage</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ED1E64</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemBodyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/notificationTitle</item>
        <item name="android:textColor">#0D4A3E</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--*************************************************-->
    <!--********** LOGIN ACTIVITY STYLES **********-->
    <!--*************************************************-->

    <style name="LoginRelative" parent="mathParent">
        <item name="android:background">#201A30</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ED1E64</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:text">Login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="LoginEmailEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/baseline_mail_24</item>
        <item name="android:drawablePadding">10sp</item>
        <item name="android:hint">EMAIL</item>
        <item name="android:textColor">#bbbbbb</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">74sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">40sp</item>
        <item name="android:backgroundTint">#0CF4E3</item>
        <item name="android:elevation">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:text">Log In</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>