<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--COMMON STYLES-->
    <style name="mathParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">20sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/raleway_b</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--TRENDING FRAGMENT STYLES-->
    <style name="trendingHeading" parent="heading">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:background">@drawable/line</item>
    </style>

    <style name="trendingRecyclerView" parent="mathParent">
        <item name="android:padding">2dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_below">@id/heading</item>
    </style>

    <!--CATEGORIES FRAGMENT STYLES-->
    <style name="categoryRelative" parent="mathParent">
        <item name="android:background">@color/primary</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="categoryHeading" parent="heading">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">40sp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="categorySubHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">30sp</item>
    </style>

    <style name="cardLinearLayout" parent="wrapContent">
        <item name="android:gravity">center</item>
        <item name="android:padding">20sp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/card_round_white</item>
    </style>

    <style name="cardText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <!--SETTINGS FRAGMENT STYLES-->
    <style name="profileLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="infoLinearLayout" parent="mathParent">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="userImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:src">@drawable/user</item>
    </style>

    <style name="nameTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:fontFamily">@font/raleway_b</item>
        <item name="android:text">"Himanshu"</item>
    </style>

    <style name="emailTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#bbbbbb</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:text">"himanshu@yopmail.com"</item>
    </style>

    <style name="titleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#E8C4C4</item>
        <item name="android:fontFamily">@font/raleway_b</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/line</item>
    </style>

    <style name="settingLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settingTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#dddddd</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settingValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="notificationSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:switchMinWidth">56dp</item>
        <item name="android:height">48dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>
</resources>